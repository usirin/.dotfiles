# yabai -m rule --add app='Spotify' manage=off layer=below
# yabai -m rule --add app='Discord' manage=off layer=below

# general space settings
yabai -m config layout bsp

yabai -m config window_shadow float
yabai -m config window_opacity off
yabai -m config active_window_opacity 0.99
yabai -m config normal_window_opacity 0.97

yabai -m config external_bar all:0:0

yabai -m config top_padding    4
yabai -m config bottom_padding 4
yabai -m config left_padding   4
yabai -m config right_padding  4
yabai -m config window_gap     6
yabai -m config status_bar off

yabai -m config insert_feedback_color 0xaad75f5f

borders active_color=0xff5865f2 inactive_color=0xff000000 hidpi=on style=circle width=4.0 &
